<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgimage"
    android:contentDescription="@string/bgimg"
    tools:context="com.example.moha.cardrac.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScoreLeft"
        android:padding="10dp">


        <TextView
            android:id="@+id/scorePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_0"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/left"
            android:text="@string/left_25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal|bold"/>

    </LinearLayout>

    <TableLayout
        android:id="@+id/nullTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ScoreLeft"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard1"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard2"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard3"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard4"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard5"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard6"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard7"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard8"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard9"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard10"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard11"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard12"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard13"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard14"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard15"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imgnull"
                android:id="@+id/nullCard16"/>

        </TableRow>

    </TableLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout"
        android:layout_above="@id/nullTable"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nullTable">


        <ImageView
            android:id="@+id/bigCard"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:onClick="gameOver"
            app:srcCompat="@drawable/bc3" />


    </LinearLayout>

</RelativeLayout>
